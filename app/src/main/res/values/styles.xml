<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="button_home" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:fontFamily">@font/comfortaa_semibold</item>
        <item name="android:textSize">14pt</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:shadowColor">@color/color_primary1</item>
        <item name="android:shadowRadius">30</item>
    </style>

    <style name="button_primary" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:fontFamily">@font/comfortaa_semibold</item>
        <item name="android:textSize">10pt</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:shadowColor">@color/color_primary1</item>
        <item name="android:shadowRadius">30</item>
    </style>

</resources>